{
  "name": "pajo-pharma",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "prisma generate && next build",
    "postinstall": "prisma generate",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "start:prod": "NODE_ENV=production next start -p 3000",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "node prisma/seed.js",
    "db:reset": "prisma migrate reset --force",
    "validate-db": "tsx scripts/validate-db.ts",
    "health-check": "curl -f http://localhost:3000/api/health || exit 1",
    "test:build": "npm run type-check && npm run lint && npm run build",
    "backup": "mkdir -p backups && cp prisma/dev.db backups/backup-$(date +%Y%m%d-%H%M%S).db",
    "clean": "rm -rf .next && rm -rf node_modules/.cache",
    "build:mobile": "cross-env MOBILE_BUILD=true next build --no-lint && cross-env MOBILE_BUILD=true next export && npx cap sync",
  "build:mobile:ci": "cross-env MOBILE_BUILD=true next build --no-lint && cross-env MOBILE_BUILD=true next export && npx cap sync",
    "android:dev": "npm run build:mobile && npx cap run android",
    "android:build": "npm run build:mobile && npx cap build android",
    "android:open": "npx cap open android",
    "icons:generate": "node scripts/generate-icons.js",
    "vercel:env-commands": "node -e \"console.log('vercel env add NEXTAUTH_URL production\nvercel env add NEXTAUTH_SECRET production\nvercel env add DATABASE_URL production\nvercel env add NODE_ENV production')\""
  },
  "engines": {
    "node": "22.x"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.3",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@hookform/resolvers": "^5.1.1",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.11.1",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/nprogress": "^0.2.3",
    "autoprefixer": "^10.4.20",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "csv-parse": "^6.0.0",
    "date-fns": "^4.1.0",
    "html5-qrcode": "^2.3.8",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.525.0",
    "next": "15.3.5",
    "next-auth": "^4.24.11",
    "next-themes": "^0.4.6",
    "node-fetch": "^2.7.0",
    "nprogress": "^0.2.0",
    "postcss": "^8.4.47",
    "prisma": "^6.11.1",
    "react": "^19.0.0",
    "react-day-picker": "^9.8.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.60.0",
    "react-to-print": "^3.1.1",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.13",
    "uuid": "^11.1.0",
    "zod": "^4.0.5",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "better-sqlite3": "^12.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.3.5",
    "jimp": "^0.16.1",
    "tw-animate-css": "^1.3.5",
    "typescript": "^5"
  }
}

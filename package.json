{
  "name": "pharma-suite",
  "version": "1.0.0",
  "description": "Solution générique de gestion pour pharmacies",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "postinstall": "npx prisma generate",
    "config:reset": "node scripts/config-utils.js reset",
    "config:validate": "node scripts/config-utils.js validate",
    "config:status": "node scripts/config-utils.js status",
    "config:list": "node scripts/config-utils.js list",
    "config:export": "node scripts/config-utils.js export",
    "config:cleanup": "node scripts/config-utils.js cleanup",
    "db:status": "npx prisma db execute --stdin < /dev/null",
    "db:migrate": "npx prisma migrate dev",
    "db:seed": "npx ts-node scripts/setup-multi-tenant.ts",
    "setup:multi-tenant": "npx ts-node scripts/setup-multi-tenant.ts",
    "admin:create-instance": "npx ts-node scripts/create-instance.ts",
    "test:payments": "npx ts-node scripts/test-payments.ts",
    "test:notifications": "npx ts-node scripts/test-notifications.ts",
    "lint": "npx eslint . --ext .ts,.tsx",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "axios": "^1.5.0",
    "bcryptjs": "^2.4.3",
    "lucide-react": "^0.544.0",
    "next": "15.3.5",
    "next-auth": "^4.24.11",
    "nodemailer": "^6.9.0",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.1",
    "qs": "^6.14.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "speakeasy": "^2.0.0",
    "stripe": "^14.0.0",
    "twilio": "^4.0.0"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.0",
    "@types/react": "19.2.0",
    "@types/speakeasy": "^2.0.10",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "prisma": "^6.16.2",
    "tailwindcss": "^3.4.18",
    "typescript": "5.9.3"
  }
}
